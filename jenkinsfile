node {
    stage('prepare'){
       step([$class: 'WsCleanup', notFailBuild: true])
       checkout scm
     }
    stage('build') {
       sh '''mvn clean install'''
    }

    stage('test'){
        sh ''' mvn -X livingdoc:freeze -Dlivingdoc.document.repository.base.url="http://localhost:2090/confluence/rpc/xmlrpc?handler=livingdoc1&amp;sut=CI&amp;includeStyle=true&amp;implemented=true#LD" '''

        withEnv(['DISPLAY=:1']) {
            timeout(5){
               try {
                   sh 'Xvfb :1 -screen 0 1920x1200x24 &'
                   sh ''' mvn -X livingdoc:run '''

               }catch(e){
                   echo 'Error executing the tests: ${e}'
               }finally {
                  sh 'pkill Xvfb'
               }
            }
       }
    }

    stage('report'){
        livingdoc confluenceConfig: [confluenceSiteTitle: 'AQE Showcase Confluence', confluenceSpaceKey: 'LD', confluenceUrl: 'http://localhost:2090/confluence', sut: 'CI'], failureThreshold: 50, testResultsPattern: '**/livingdoc-reports/**'
    }

    stage('publish'){
        try{
           sh 'rm -r /var/aat-remote/classpath'
        }catch(e){}
        sh 'mkdir /var/aat-remote/classpath'
        sh 'cp -R target/libs/ /var/aat-remote/classpath'
        sh 'cp target/*.jar  /var/aat-remote/classpath/libs'
        sh 'mkdir /var/aat-remote/classpath/resources'
        sh 'cp -R target/test-classes/* /var/aat-remote/classpath/resources'
     }
}
